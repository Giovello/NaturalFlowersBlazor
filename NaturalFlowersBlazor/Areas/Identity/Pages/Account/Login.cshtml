@page
@using NaturalFlowers.Areas.Identity.Pages.Account;
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div style="background-color:#97BB8E;">
<div style="display:flex; flex-direction: row; justify-content: space-between;">
    <div class="mx-3" style="max-width:35vw">
        <h1>Login</h1>
        <div>
            <section>
                <form id="account" method="post">
                    <h2>Use a local account to log in.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                    <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>

    <div style="border-left: 6px solid black; height: 500px; border-radius:10px;"></div>

    <div class="mx-3" style="max-width:35vw">
        <h1 style="max-height:41px;">Register</h1>
        <div>
            <section>
                <form id="registerForm" asp-page-handler="button" asp-route-returnUrl="@Model.RegisterReturnUrl" method="post">
                    <h2>Create a new account.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="RegisterInput.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="RegisterInput.Email"></label>
                        <span asp-validation-for="RegisterInput.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="RegisterInput.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="RegisterInput.Password"></label>
                        <span asp-validation-for="RegisterInput.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="RegisterInput.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="RegisterInput.ConfirmPassword"></label>
                        <span asp-validation-for="RegisterInput.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button id="registerSubmit" @*type="submit"*@ onclick="() => OnRegisterPostAsync()" class="w-100 btn btn-lg btn-primary">Register</button>
                </form>
            </section>
        </div>
    </div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
